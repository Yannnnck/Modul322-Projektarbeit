<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="SaveUp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:views="clr-namespace:SaveUp.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="SaveUp">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Input" Icon="input_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:InputPage}" />
        </Tab>
        <Tab Title="List" Icon="list_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ListPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>